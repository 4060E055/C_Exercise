【程式開發練習5-2】 費氏數列(loop)
---------------------------------------

<C>

#include <stdio.h>
#include<stdlib.h>
int main ()
{
 printf("請輸入要多少個費式數列：");
 int n ,a=0,aa=1;
scanf("%d",&n);
 printf("1 ");
  for (int i=1;i<n;i++){	
  	printf("%d ",a+aa); 
  	aa=a+aa;
  	a=aa-a;
  }
 system("pause"); 
   return 0;
}
---------------------------------------

<C++>

#include <iostream>
using namespace std;
 
int main ()
{
 cout<<"請輸入要多少個費式數列：";
 int n ,a=0,aa=1;
cin >>n;
 printf("1 ");
  for (int i=1;i<n;i++){	
  	cout<<a+aa<<" "; 
  	aa=a+aa;
  	a=aa-a;
  }
 system("pause"); 
   return 0;
}
---------------------------------------

<Java>

import java.util.Scanner;
public class exercise5_2 {
public static void main(String[] args){
	 Scanner input =new Scanner (System.in);
	 System.out.print("請輸入要多少個費式數列：");
	 int n =input.nextInt();
	 int a=0,aa=1;
	 System.out.print("1 ");
	  for (int i=1;i<n;i++){	
			 System.out.print(a+aa + " ");
		  	aa=a+aa;
		  	a=aa-a;
		  }
   }
}
