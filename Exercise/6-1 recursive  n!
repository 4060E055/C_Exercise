【程式開發練習6-1】遞迴程式(RECURSIVE)
N!=N*(N-1)*......*1
F(N)=N*F(N-1) 
F(0)=1
---------------------------------------

<C>

#include <stdio.h>
#include<stdlib.h>
int main (){
printf("請輸入一個整數：");
int n ,a=1;
scanf("%d",&n);
for (int i=2;i<=n;i++)
a*=i;
printf("該數的N!為：%d\n",a);
system("pause");
return 0;
}
---------------------------------------

<C++>

#include <iostream>
using namespace std;
 
int main (){
cout<< "請輸入一個整數：";
int n ,a=1;
cin >>n;
for (int i=2;i<=n;i++)
a*=i;
cout<<"該數的N!為："<< a<<endl; 
 system("pause"); 
   return 0;
}
---------------------------------------

<Java>

public class t01 {
	public static void main(String[] args) {
  System.out.print("請輸入一個整數：");
		Scanner input =new Scanner(System.in);
		int a=1,n=input.nextInt();		
		for (int i=2;i<=n;i++)
			a*=i;
		System.out.println("該數的N!為：" + a );
		input.close();
	}
}
